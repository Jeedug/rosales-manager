{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
    
  },
  "package": {
    "productName": "rosales-admin",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true ,
        "scope": ["https://viajesrosales.netlify.app/*"]
      },
      "all": true,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "minimize": true,
        "unminimize": true,
        "startDragging": true
      },
      "fs": {
        "readDir": true,
        "scope": [
          "**"
        ]
      },
      "path": {
        "all": true
      }
    },
    
    "windows": [
      {
        "title": "Rosales Manager",
        "minWidth": 600,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "center": true,
        "maxWidth": 800,
        "maxHeight": 600
      }
    ],
    "security": {
      "csp": ""
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.rosales.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": null
      }
    }
  }
}
